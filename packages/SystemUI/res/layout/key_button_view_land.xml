<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res/com.android.systemui"
    android:layout_height="0dp"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:orientation="vertical" >
    
    <com.android.systemui.statusbar.policy.ExtensibleKeyButtonView
        android:id="@+id/keybutton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_key_height"
        android:scaleType="centerInside"
        android:paddingLeft="@dimen/navigation_key_padding_top"
        android:paddingRight="@dimen/navigation_key_padding_bottom"
        android:paddingTop="@dimen/navigation_key_padding_side"
        android:paddingBottom="@dimen/navigation_key_padding_side"
        systemui:glowBackground="@drawable/ic_sysbar_highlight" />

</LinearLayout>