<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/window_main"
    android:orientation="vertical"
    android:focusable="true"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:gravity="center"
    android:descendantFocusability="afterDescendants">

    <TextView
            android:id="@+id/window_label"
            style="@style/TextAppearance.StatusBar.Clock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="45dp"
            android:paddingBottom="2dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="@string/app_window" />

    <ImageView
            android:id="@+id/window_divider_top"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/status_bar_hr" />

        <LinearLayout
            android:id="@+id/window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16.0dp"
            android:paddingRight="16.0dp"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/window_divider_bottom"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/status_bar_hr" />

        <Button android:id="@+id/close"
            style="@style/TextAppearance.StatusBar.Clock"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="40dp"
            android:text="@string/close"/>
</LinearLayout>
