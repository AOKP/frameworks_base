<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ListTheme" parent="@*android:style/Theme.Holo">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:listSelector">@*android:color/transparent</item>
        <item name="android:scrollbars">none</item>
        <item name="android:clipChildren">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="TextAppearance.StatusBar.Expanded.WeatherTemp">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/status_bar_temperature_text_color</item>
    </style>

    <style name="TextAppearance.StatusBar.Expanded.WeatherLocation">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/status_bar_temperature_location_text_color</item>
    </style>

    <!-- App side bar -->
    <style name="AppSidebarItemText" >
        <item name="android:textColor">@color/sidebar_item_text_color</item>
        <item name="android:textSize">@dimen/item_title_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/sidebar_item_text_shadow_color</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
    </style>

    <!-- Switch bar text appearance -->
    <style name="TextAppearance.SwitchBar" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="BatteryMeterViewDrawable.Solid"/>
    <style name="BatteryMeterViewDrawable.aokp"/>

    <!-- Date and Clock shadow -->
    <style name="TextAppearance.StatusBar.Expanded.Clock.Shadow" parent="TextAppearance.StatusBar.Expanded.Clock" >
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="TextAppearance.StatusBar.Expanded.Date.Shadow" parent="TextAppearance.StatusBar.Expanded.Date" >
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="TextAppearance.StatusBar.RecentsN" parent="@*android:style/TextAppearance.StatusBar.Icon">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Phyisical Keyboard Dialog style -->
    <style name="KeyboardShortcutsDialog" parent="@*android:style/Theme.DeviceDefault.Light" />

   <style name="TextAppearance.StatusBar.Expanded.Weather">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextAppearance.StatusBar.Expanded.Weather.Detailed">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
